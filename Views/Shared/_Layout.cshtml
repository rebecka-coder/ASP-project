@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASPproject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" type="text/css" />
    <link href="https://fonts.googleapis.com/css2?family=Merriweather&display=swap" rel="stylesheet">
</head>
<body>
    <div class="content">
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark sticky-top bg-dark" style="max-width: 100vw;">
                <div class="container-fluid">

                    <!--Toggle navbar-->
                    <a asp-controller="Home" class="navbar-brand" asp-action="Index"><img src="~/images/logo.png" alt="Logo" /></a>
                    <button class="navbar-toggler d-lg-none" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <!--Navbar links-->
                    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item active">
                                <a asp-controller="Home" class="nav-link text-light" asp-action="Index">HEM</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Bookings" class="nav-link text-light" asp-action="BookCatering">BOKA CATERING</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Home" class="nav-link text-light" asp-action="Menu">MENY</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Home" class="nav-link text-light" asp-action="About">OM OSS</a>
                            </li>
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                </li>
                            }
                        </ul>
                        <partial name="_LoginPartial" />
                    </div><!--End navbar links-->
                </div><!--End toggle navbar-->
            </nav>
        </header>
        <div class="container body-content">
                @RenderBody()
        </div><!--End container body-content-->
    </div><!--End content-->

    <!-- Footer -->
    <footer class="page-footer font-small black pt-4 fixed">
        <div class="container-fluid text-center text-light">
            <div class="row">
                <div class="col-md-12 mt-md-0 mt-3">
                    <h5 class="text-uppercase mb-2">Kontakt</h5>
                    <p>Jämtland Catering | Chaufförvägen 16A | 831 48 Östersund | 070 - 123 45 67 | <a href="#!" class="text-light">info@jcatering.com</a>
                </div>
            </div>

        </div>
    </footer>
    <!-- Footer -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)


    <script src="~/js/main.js"></script>
</body>

</html>
