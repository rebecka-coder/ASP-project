@model IEnumerable<ASPproject.Models.News>
@{
    ViewData["Title"] = "Startsidan";
}

<div id="slides" class="carousel slide" data-ride="carousel">
    <ul class="carousel-indicators">
        <li data-target="#slides" data-slides-to="0" class="active"></li>
        <li data-target="#slides" data-slides-to="1"></li>
        <li data-target="#slides" data-slides-to="2"></li>
    </ul>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/background1.jpg" alt="pasta background-image"/>
            <div class="carousel-caption">
                <h1 class="headline">Jämtland catering</h1>
                <div class="d-none d-md-block">
                <a asp-controller="Home" type="button" class="btn btn-outline-light btn-lg" asp-action="Menu">Meny</a>
                <a asp-controller="Bookings" type="button" class="btn btn-outline-light btn-lg" asp-action="BookCatering">Boka</a>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/background2.jpg" alt="tomatoe-pie background-image" />
            <div class="carousel-caption">
                <h1 class="display-3">Jämtland catering</h1>
                <div class="d-none d-md-block">
                    <a asp-controller="Home" type="button" class="btn btn-outline-light btn-lg" asp-action="Menu">Meny</a>
                    <a asp-controller="Bookings" type="button" class="btn btn-outline-light btn-lg" asp-action="BookCatering">Boka</a>
                </div>
            </div>
            </div>
        <div class="carousel-item">
            <img src="~/images/background3.jpg" alt="hamburger background-image" />
            <div class="carousel-caption">
                <h1 class="display-3">Jämtland catering</h1>
                <div class="d-none d-md-block">
                    <a asp-controller="Home" type="button" class="btn btn-outline-light btn-lg" asp-action="Menu">Meny</a>
                    <a asp-controller="Bookings" type="button" class="btn btn-outline-light btn-lg" asp-action="BookCatering">Boka</a>
                </div>
                </div>
            </div>
    </div>
</div>
<div class="jumbotron text-center">
    <h1 class="display-4">Välkomna med eran bokning!</h1>
    <h2 class="display-5 booking-subtitle">Bokning sker via hemsidan eller via telefon 070-123 45 67</h2>
</div>

<section id="news">
    <div class="container">
        <div class="title">
            <h3 class="text-center">Nyheter</h3>
        </div>

        
        <div class="row">
            @foreach (var news in Model)
            {
                    <div class="card mx-auto text-center news-card">
                        <img src="~/images/news.jpg" class="card-img-top" />
                        <div class="card-body">
                            <h3 class="card-title display-5">@Html.DisplayFor(modelItem => news.Title)</h3>
                            <p class="card-text">@Html.DisplayFor(modelItem => news.Message)</p>
                            <p class="card-text"><small class="text-muted">@Html.DisplayFor(modelItem => news.Date)</small></p>
                        </div>
                    </div>

              }

         </div>
    </div><br/>
</section>


